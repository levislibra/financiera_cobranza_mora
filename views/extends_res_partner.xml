    <record model="ir.actions.act_window" id="cobranza_mora_action">
      <field name="name">Deudores</field>
      <field name="res_model">res.partner</field>
      <field name="view_mode">tree,form</field>
      <field name="domain">[('saldo_mora','>', 0)]</field>
      <field name="view_ids" eval="[(5, 0, 0), 
        (0, 0, {'view_mode': 'tree', 'view_id': ref('cobranza_mora_cliente_tree')}),
        (0, 0, {'view_mode': 'form', 'view_id': ref('cobranza_mora_cliente_sesion_form')})]
        "/>
    </record>

		<!-- Vista Form Partner Deudor para Sesion -->

    <record id="cobranza_mora_cliente_sesion_form"  model="ir.ui.view">
      <field name="name">cobranza.mora.form</field>
      <field name="model">res.partner</field>
      <field name="arch" type="xml">
        <form>
          <header>
						<button type="object" string="Enviar sms" name= "wizard_enviar_sms" class="oe_highlight"/>
          </header>
          <sheet>
						<script>
							$(document).ready(function(){
								$('.modal-dialog').css({'width': '76%', 'height': '97%'});
								$('.modal-content').css({'height': '100%'});
								$('.modal-body').css({'height': '100%'});
							});
					</script>
            <group name="generales">
							<group name="generales_columna_1">
								<field name="company_id" groups="base.group_erp_manager"/>
								<field name="name" readonly="1"/>
								<field name="phone" readonly="1"/>
								<field name="mobile" readonly="1"/>
								<field name="email" readonly="1"/>
                <field name="cobranza_disponible" invisible="0"/>
							</group>
							<group name="generales_columna_2">
							</group>
            </group>
            <notebook>
              <page string="CONTACTOS">
                <field name="contacto_ids" options="{'no_quick_create':True,'no_create_edit':True, 'no_open':True}" readonly="0">
                  <tree create="true" delete="false" editable="1" limit="5">
                    <field name="create_date" invisible="1"/>
										<field name="name" required="1"/>
                    <field name="relacion"/>
                    <field name="movil"/>
										<field name="telefono"/>
                    <field name="email"/>
                  </tree>
                </field>
              </page>
            </notebook>
            <notebook>
              <page string="DEUDA">
                <field name="cuota_mora_ids" readonly="0">
                  <tree decoration-success="state == 'cobrada'" decoration-danger="state_mora in ['moraMedia', 'moraTardia', 'incobrable']" decoration-warning="state_mora in ['preventiva', 'moraTemprana']" decoration-info="state == 'borrador'" decoration-muted="state == 'cobrada'" string="Cuotas" limit="5"
										create="false" delete="false">
                    <field name="display_numero_cuota" readonly="1"/>
                    <field name="prestamo_id" readonly="1" widget="many2one_unclickable" options="{'no_quick_create':True,'no_create_edit':True, 'no_open':True}"/>
                    <field name="fecha_vencimiento" readonly="1"/>
                    <field name="total" widget="monetary" options="{'currency_field': 'currency_id'}" sum="Total" readonly="1"/>
                    <field name="cobrado" widget="monetary" options="{'currency_field': 'currency_id'}" sum="Total" readonly="1"/>
                    <field name="saldo" widget="monetary" options="{'currency_field': 'currency_id'}" sum="Total" readonly="1"/>
                    <field name="sucursal_id" readonly="1" widget="many2one_unclickable" options="{'no_quick_create':True,'no_create_edit':True, 'no_open':True}"/>
                    <field name="state" readonly="1"/>
                    <field name="state_mora" readonly="1"/>
                    <field name="fecha_vencimiento_pre_semana" invisible="1"/>
                    <field name="fecha_vencimiento_pos_semana" invisible="1"/>
										<field name="pagos_360_generar_pago_voluntario" invisible="1"/>
										<button name="button_renovar_solicitud_cupon" type="object" string="Renovar cupon" class="oe_highlight" attrs="{'invisible': [('pagos_360_generar_pago_voluntario','=', False)]}"/>
										<button name="action_cupon_sent" type="object" string="Enviar cupon" class="oe_highlight" attrs="{'invisible': [('pagos_360_generar_pago_voluntario','=', False)]}"/>
										<field name="mobbex_suscripcion_suscriptor_confirm" invisible="1"/>
										<button name="mobbex_subscriber_execution" type="object" string="Debitar" class="oe_highlight" attrs="{'invisible': [('mobbex_suscripcion_suscriptor_confirm','=', False)]}" confirm="Esta seguro?"/>
                  </tree>
									<form>
										<sheet>
											<group>
												<field name="display_numero_cuota" readonly="1"/>
												<field name="prestamo_id" readonly="1" widget="many2one_unclickable" options="{'no_quick_create':True,'no_create_edit':True, 'no_open':True}"/>
												<field name="fecha_vencimiento" readonly="1"/>
												<field name="total" widget="monetary" options="{'currency_field': 'currency_id'}" sum="Total" readonly="1"/>
												<field name="cobrado" widget="monetary" options="{'currency_field': 'currency_id'}" sum="Total" readonly="1"/>
												<field name="saldo" widget="monetary" options="{'currency_field': 'currency_id'}" sum="Total" readonly="1"/>
												<field name="sucursal_id" readonly="1" widget="many2one_unclickable" options="{'no_quick_create':True,'no_create_edit':True, 'no_open':True}"/>
												<field name="state" readonly="1"/>
												<field name="state_mora" readonly="1"/>
												<field name="fecha_vencimiento_pre_semana" invisible="1"/>
												<field name="fecha_vencimiento_pos_semana" invisible="1"/>
												<field name="pagos_360_generar_pago_voluntario" invisible="1"/>
												<field name="pagos_360_solicitud_state" readonly="1"/>
												<field name="pagos_360_first_due_date" readonly="1"/>
												<field name="pagos_360_first_total" readonly="1"/>
												<field name="pagos_360_second_due_date" readonly="1"/>
												<field name="pagos_360_second_total" readonly="1"/>
												<button name="button_renovar_solicitud_cupon" type="object" string="Renovar cupon" class="oe_highlight" attrs="{'invisible': [('pagos_360_generar_pago_voluntario','=', False)]}"/>
												<button name="action_cupon_sent" type="object" string="Enviar cupon" class="oe_highlight" attrs="{'invisible': [('pagos_360_generar_pago_voluntario','=', False)]}"/>
												<field name="mobbex_suscripcion_suscriptor_confirm" invisible="1"/>
												<button name="mobbex_subscriber_execution" type="object" string="Debitar" class="oe_highlight" attrs="{'invisible': [('mobbex_suscripcion_suscriptor_confirm','=', False)]}" confirm="Esta seguro?"/>
											</group>
										</sheet>
										<footer>
											<div class="oe_chatter">
												<!-- <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/> -->
												<field name="message_ids" widget="mail_thread"/>
											</div>
										</footer>
									</form>
                </field>
              </page>
            </notebook>
            <group>
              <field name="saldo_mora" readonly="1"/>
            </group>
						<notebook>
							<page name="notificaiones" string="Notificaciones de deuda">
								<field name="notificacion_ids">
									<tree limit="5" editable="top">
										<!-- <field name="id"/> -->
										<field name="fecha" required="1"/>
										<field name="item_id" required="1" widget="many2one_unclickable" options="{'no_quick_create':True,'no_create_edit':True,'no_open':True}"/>
									</tree>
								</field>
							</page>
						</notebook>
            <notebook>
              <page string="HISTORIAL DE CONTACTABILIDAD">
                <field name="cobranza_historial_conversacion_ids" context="{'active_id':id}">
                  <tree limit="5" delete="true" editable="top">
                    <field name="create_date" string="Fecha" readonly="1"/>
                    <field name="create_uid" string="Creado por" readonly="1"/>
                    <field name="saldo_mora" readonly="1"/>
                    <field name="numero" attrs="{'readonly': [('registro_editable','=', False)]}" required="1"/>
										<field name="respondio" attrs="{'readonly': [('registro_editable','=', False)]}" required="1"/>
										<field name="conversacion" attrs="{'readonly': [('registro_editable','=', False)]}"/>
                    <field name="estado_id" options="{'no_quick_create':True,'no_create_edit':True, 'no_open':True}" 
											attrs="{'readonly': [('registro_editable','=', False)]}" required="1"/>
										<field name="es_promesa_de_pago" attrs="{'readonly': [('registro_editable','=', False)]}"/>
										<field name="fecha_promesa_de_pago" 
											attrs="{'required': [('es_promesa_de_pago','=',True)],'invisible': [('es_promesa_de_pago','=',False)],'readonly': [('registro_editable','=', False)]}"/>
                    <field name="proxima_accion_id" options="{'no_quick_create':True,'no_create_edit':True, 'no_open':True}" 
											attrs="{'readonly': [('registro_editable','=', False)]}" required="1"/>
                    <field name="proxima_accion_fecha" attrs="{'readonly': [('registro_editable','=', False)]}" required="1"/>
										<field name="registro_editable"/>
                  </tree>
                </field>
              </page>
            </notebook>
						
						<!-- <notebook>
							<page name="chatter" string="Emails">
								<div class="oe_chatter">
									<field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
									<field name="message_ids" widget="mail_thread"/>
								</div>
							</page>
						</notebook> -->
          </sheet>
          <footer>
            <button name="write" type="object" string="Guardar" class="oe_highlight"/>
            <button name="cancel" string="Cancel" special="cancel" class="oe_link"/> 
          </footer>
        </form>
      </field>
    </record>

    <record model="ir.actions.act_window" id="cobranza_mora_sesion_action">
      <field name="name">Sesion de cobranza</field>
      <field name="res_model">res.partner</field>
      <field name="view_mode">form</field>
      <field name="view_ids" eval="[(5, 0, 0), 
        (0, 0, {'view_mode': 'form', 'view_id': ref('cobranza_mora_cliente_sesion_form')})]
        "/>
    </record>


  </data>
</openerp>